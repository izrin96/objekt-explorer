{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".oxlintrc.json", ".oxfmtrc.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".oxlintrc.json"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$", ".oxlintrc.json"],
      "outputs": ["**/*.{ts,tsx,js,jsx}"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", ".oxfmtrc.json"],
      "outputs": ["**/*.{ts,tsx,js,jsx,json,css,md}"],
      "cache": false
    }
  }
}
