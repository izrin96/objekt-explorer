{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".oxlintrc.json", ".oxfmtrc.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:prod": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", ".oxlintrc.json"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$", ".oxlintrc.json"],
      "outputs": ["**/*.{ts,tsx,js,jsx}"],
      "cache": false
    },
    "typecheck": {
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", ".oxfmtrc.json"],
      "outputs": ["**/*.{ts,tsx,js,jsx,json,css,md}"],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
