{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./indexer": "./src/indexer/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "typecheck": "tsc --noEmit",
    "format": "oxfmt .",
    "db:generate": "drizzle-kit generate",
    "db:push": "bun run --env-file=../../.env drizzle-kit push",
    "db:migrate": "bun run --env-file=../../.env drizzle-kit migrate",
    "db:studio": "bun run --env-file=../../.env drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^1.0.0-beta.14-a36c63d",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^1.0.0-beta.14-a36c63d"
  }
}
