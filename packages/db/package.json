{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./indexer": "./src/indexer/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "typecheck": "tsc --noEmit",
    "format": "oxfmt .",
    "db:generate": "drizzle-kit generate",
    "db:push": "bun run --env-file=../../.env drizzle-kit push",
    "db:migrate": "bun run --env-file=../../.env drizzle-kit migrate",
    "db:studio": "bun run --env-file=../../.env drizzle-kit studio",
    "db:studio:indexer": "bun run --env-file=../../.env drizzle-kit studio --config drizzle-indexer.config.ts",
    "db:pull:indexer": "bun run --env-file=../../.env drizzle-kit pull --config drizzle-indexer.config.ts"
  },
  "dependencies": {
    "drizzle-orm": "^1.0.0-beta.15-9485290",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "drizzle-kit": "^1.0.0-beta.15-9485290"
  }
}
